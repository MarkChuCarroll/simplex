
// Make sure lambda works correctly.
fun test_lambda(a) do
  let x = lambda(a, b) do a+b end in
     x(a, 8)
   end
end

val t = test_lambda(3)

// And check that recursion in functions works.
fun fact(n) do
  if n == 0 then 1
  else n * fact(n - 1)
  end
end

produce(n) do
  print(["Factorial of 5 = ", fact(5)])
end


produce(t) do
   t
end
