
fun cone(radius: Float, height: Float): Csg do
      cylinder(height + 2.0, radius, 0.1)
end

fun dbl(radius: Float, height: Float): Csg do
  let c:Csg=cone(height, radius) in
     c + c->rot(0.0, 180.0, 0.0)->move(0.0, 0.0, 25.0)
  end
end

val conic: Csg = dbl(50.0, 30.0)

fun goof (base: Csg, radius: Float): Csg do
   (base + sphere(radius)->move_to(0.0, 0.0, 30.0)) -
     sphere(radius)->move_to(0.0, 0.0, 50.0)
end

produce(conic) do
   goof(conic, 10.0)->move_to(0.0, 0.0, 0.0)
   print(["bounds = ", conic->bounds()])
end
